<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#333" />
            <stroke
                android:width="2dp"
                android:color="#333" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#03A9F4"
                android:endColor="#03A9E8"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#333" />
            <corners
                android:radius="4dp" />

        </shape>
    </item>
</selector>
